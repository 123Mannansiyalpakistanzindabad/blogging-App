<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
    <title>HomePage</title>
</head>

<body>
    <%- include('./partials/nav') %>
    <%- include('./partials/scripts') %>
    <div class="container mt-4">

           <h1> <%= blog?.title %></h1>
            <img src="<%= blog?.coverImageUrl %>" alt="">
           <pre> <%= blog?.body %></pre>

    </div>
    <div class="container mt-4"> 
       <h4>User Info</h4>
         <img src="<%= blog?.createdBy.profileImageUrl %>" alt=""  width="100px">
        <h6><%= blog?.createdBy.fullName %></h6>
 </div>
 <% if (locals.user) { %>
    <div class="container mt-4"> 
      <h4>Comments </h4>
       <form action="/blog/comment/<%= blog?._id %>" method="post">
           <div class="mb-3">
            <input type="text" 
            class="form-control"
            name="content" 
            placeholder="enter your comment"
            >
            <button type="submit" class="btn btn-sm btn-info">Submit</button>
         </form>
       </div>
 <% } %>
 <% if (locals.comments) { %>
  <% comments.forEach(cmnt => { %>
   
    <div class="mt-4"> comment :<%= cmnt?.content%></div>
    <img src="<%= cmnt?.createdBy.profileImageUrl %>" alt=""  width="100px">
    <h6><%= cmnt?.createdBy.fullName %></h6>
    <% }) %>
    <% } %>
  </body>
  
  </html>
